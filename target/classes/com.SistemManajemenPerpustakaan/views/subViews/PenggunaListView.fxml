<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.SistemManajemenPerpustakaan.MVC.Views.GUI.subController.PenggunaListController">
    <center>
        <ListView fx:id="listViewPengguna" prefWidth="248.0" BorderPane.alignment="CENTER" />
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnTambahPengguna" mnemonicParsing="false" onAction="#handleTambahPengguna" text="Tambah Pengguna Baru" />
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </HBox>
    </bottom>
   <top>
      <HBox prefHeight="40.0" prefWidth="248.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="22.0" prefWidth="112.0" text="Daftar Pengguna" />
         </children>
      </HBox>
   </top>
</BorderPane>
